<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.registration.RegistrationFragment">

    <EditText
        android:id="@+id/field_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="password"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/field_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="password"
        android:hint="@string/prompt_name"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/field_email"/>
    <EditText
        android:id="@+id/field_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="password"
        android:hint="@string/prompt_login"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/field_login"/>
    <EditText
        android:id="@+id/field_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="password"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/field_name"/>
    <EditText
        android:id="@+id/field_password_verify"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="password"
        android:hint="@string/prompt_password_verify"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/field_password"/>

    <Button
        android:id="@+id/button_register"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/action_sign_up_short"
        app:layout_constraintTop_toBottomOf="@id/field_password_verify"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>